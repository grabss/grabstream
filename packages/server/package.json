{
  "name": "@grabstream/server",
  "version": "0.1.0",
  "description": "A minimal, extensible WebRTC signaling server for Node.js.",
  "license": "MIT",
  "author": "grabss Inc.",
  "homepage": "https://grabss.co.jp",
  "repository": {
    "type": "git",
    "url": "https://github.com/grabss/grabstream.git",
    "directory": "packages/server"
  },
  "bugs": {
    "url": "https://github.com/grabss/grabstream/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "minimal",
    "websocket",
    "webrtc"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:cjs-package",
    "clean": "rm -rf dist",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:cjs-package": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "dev": "tsc --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:ci": "biome ci .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@grabstream/core": "workspace:^",
    "uuid": "^11.1.0",
    "ws": "^8.18.2"
  },
  "packageManager": "pnpm@10.12.1",
  "publishConfig": {
    "access": "public"
  }
}
